{
  "name": "wheel-calculator",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder --win --x64",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:all": "npm run build && electron-builder --win --mac --x64"
  },
  "dependencies": {
    "alphavantage": "^2.5.0",
    "axios": "^1.13.5",
    "lightweight-charts": "^5.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "yahoo-finance2": "^3.13.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.2.1",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "vite": "^5.4.1",
    "vite-plugin-pwa": "^0.20.0",
    "wait-on": "^9.0.4"
  },
  "build": {
    "appId": "com.wheel.calculator",
    "productName": "Wheel Calculator",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron.js",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "dist/pwa-512x512.png"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "dist/pwa-512x512.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
